<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    <!-- <%= @messages.inspect %> -->
    <div class="panel-body">
        <!-- <div class="container"> -->
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>投稿者</th>
                        <th>年齢</th>
                        <th>メッセージ内容</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    
                <% @messages.each do |message| %>
                    <tr>
                        <td><%= message.id %></td>
                        <td><%= message.name %></td>
                        <td><%= message.age %></td>
                        <td><%= message.body %></td>
                        <td>
                            [<%= link_to " 編集 " , edit_message_path(message) %>|
                             <%= link_to " 削除 " , message , method: :delete , data: { confirm: '削除してもよろしいですか？' } %>
                             ]
                            <br>                            
                        </td>
                    </tr>
                <% end %>
                </tbody>
            </table>
    </div>
</div>

<% #部分テンプレートを読み込んでいる %>
<%= render 'form' %>